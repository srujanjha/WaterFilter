<Page
    x:Class="WaterFilter.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WaterFilter"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="White">

    <Grid>
        
        <StackPanel Margin="10" Orientation="Vertical">
            <StackPanel>
                <Border BorderBrush="White" Background="#FF510404"> <TextBlock Text="Water Filter" FontSize="30" Height="50" HorizontalAlignment="Center" FontWeight="Bold"/>
                </Border>
            </StackPanel>
            <StackPanel Margin="10,10" Orientation="Horizontal" VerticalAlignment="Center" Width="313" HorizontalAlignment="Right" >
                <TextBlock Margin="10" Text="Filter-1" FontSize="30" Foreground="Black"/>
                <TextBlock Margin="10" Name="txt1" Text="ON" Width="80" FontSize="30" Foreground="Black"/>
                <Ellipse Name="r1" Height="50" Width="50" Fill="#FF009500"/>
            </StackPanel>
            <StackPanel Margin="10,10" Orientation="Horizontal" VerticalAlignment="Center" Width="313" HorizontalAlignment="Right">
                <TextBlock  Margin="10" Text="Filter-2" FontSize="30" Foreground="Black"/>
                <TextBlock  Margin="10" Name="txt2" Text="ON"  Width="80" FontSize="30" Foreground="Black"/>
                <Ellipse Name="r2" Height="50" Width="50" Fill="#FF009500"/>
            </StackPanel>
            <StackPanel Margin="10,10" Orientation="Horizontal" VerticalAlignment="Center" Width="313" HorizontalAlignment="Right">
                <TextBlock Margin="10"  Text="Filter-3" FontSize="30" Foreground="Black"/>
                <TextBlock  Margin="10" Name="txt3" Text="ON" Width="80"  FontSize="30" Foreground="Black"/>
                <Ellipse Name="r3" Height="50" Width="50" Fill="#FF009500"/>
            </StackPanel>
            <StackPanel Margin="10,10" Orientation="Horizontal" VerticalAlignment="Center" Width="313" HorizontalAlignment="Right">
                <TextBlock Margin="10"  Text="Filter-4" FontSize="30" Foreground="Black"/>
                <TextBlock  Margin="10" Name="txt4" Text="ON" Width="80"  FontSize="30" Foreground="Black"/>
                <Ellipse Name="r4" Height="50" Width="50" Fill="#FF009500"/>
            </StackPanel>
            <StackPanel Margin="10,10" Orientation="Horizontal" VerticalAlignment="Center" Width="313" HorizontalAlignment="Right">
                <TextBlock  Margin="10" Text="Filter-5" FontSize="30" Foreground="Black"/>
                <TextBlock  Margin="10" Name="txt5" Text="ON" Width="80"  FontSize="30" Foreground="Black"/>
                <Ellipse Name="r5" Height="50" Width="50" Fill="#FF009500"/>
            </StackPanel>
            <StackPanel Margin="10,10" Orientation="Horizontal" VerticalAlignment="Center" Width="313" HorizontalAlignment="Right">
                <TextBlock  Margin="10" Text="Filter-6" FontSize="30" Foreground="Black"/>
                <TextBlock Margin="10"  Name="txt6" Text="ON" Width="80"  FontSize="30" Foreground="Black"/>
                <Ellipse Name="r6" Height="50" Width="50" Fill="#FF009500"/>
            </StackPanel>
            <TextBlock Margin="5" Text="Developed by Srujan Jha" HorizontalAlignment="Right" FontSize="14" Foreground="Black"/>
        </StackPanel>
    </Grid>
    <Page.BottomAppBar>
        <CommandBar>
            <CommandBar.PrimaryCommands>
                <AppBarButton x:ConnectionId='1'
                                         
                    Icon="Refresh"
                    Label="refresh"/>
            </CommandBar.PrimaryCommands>
        </CommandBar>
    </Page.BottomAppBar>
</Page>

