<Window x:Class="WaterFilter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WaterFilter"
        mc:Ignorable="d"
        Title="Sign In" Height="350" Width="525">
    <Grid>
        <StackPanel Orientation="Vertical" Width="300" Height="200">
            <StackPanel Orientation="Horizontal">
                <Label x:Name="DeviceId" Content="Device ID" Height="30" Width="100" Foreground="#FF3C8CB2" FontSize="14"/>
                
                <TextBox x:Name="DeviceID" Text="foo@example.com" Height="30" Width="150" BorderThickness="2"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                <Label x:Name="password" Content="Password" Height="30" Width="100" Foreground="#FF3C8CB2" FontSize="14"/>
                <PasswordBox x:Name="Pass" Password="hello" Height="30" Width="150" BorderThickness="2"/>
            </StackPanel>

            <Button x:Name="Login" Content="Login" Height="25" Width="80" Margin="110,20,0,0" Background="#FF3C8CB2"  Foreground="White" Click="Login_Click"/>
        </StackPanel>
        
    </Grid>
</Window>
